{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "module": "commonjs",
        "importHelpers": true,
        "esModuleInterop": true,
        "strict": true,
        "declaration": true,
        "noEmit": true,
        "rootDir": ".",
        "jsx": "react",
        "resolveJsonModule": true,
        "jsxFactory": "ActiveRenderer.createElement",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "sourceMap": true,
        "lib": [
            "dom",
            "es2017"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        ".cache"
    ],
    "include": [
        "."
    ]
}