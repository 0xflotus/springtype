{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "module": "commonjs",
        "importHelpers": true,
        "outDir": "dist",
        "strict": true,
        "declaration": true,
        "rootDir": "src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "lib": [
            "dom",
            "es2017",

            "es2015.core",
            "es2015.promise",
            "es2015.collection",
            "es2015.symbol",
            "es2015.symbol.wellknown",

            "es2016.array.include",

            "es2017.string",
            "es2017.object",
            "es2018.promise",

            "es2015.reflect",
            "es2017.typedarrays"
        ]
    }
}