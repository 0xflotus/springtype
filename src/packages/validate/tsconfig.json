{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "importHelpers": true,
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "noEmit": false,
    "jsx": "react",
    "jsxFactory": "ActiveRenderer.createElement",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "types": ["reflect-metadata", "mocha"],
    "rootDirs": [
      "../core",
      "src"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts"
  ]
}
