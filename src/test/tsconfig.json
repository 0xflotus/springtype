{
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "node",
    "module": "commonjs",
    "importHelpers": true,
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "noEmit": true,
    "rootDir": ".",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "types": ["reflect-metadata"]
  },
  "include": [
    "."
  ]
}
